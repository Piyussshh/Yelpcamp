<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				Yelp camp
			</p>
			<div class="list-group">

				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>		
				<li class="list-group-item">Info 3</li>

			</div>
		</div>
		
		<div class="col-md-9">
			<div class="thumbnail">
				<figure class="figure">
					<img class="img-fluid img-thumbnail" src="<%=campground.image%>">
					<div class="figure-caption">
						<h4 class="float-right">
							$<%=campground.price%>/night
						</h4>
						<a href="#" ><h4>
						 <%= campground.name %>
						</h4> </a>
						<p>
							<%= campground.description %>
						</p>
						<p>
							<em>Submitted by <%= campground.author.username %> </em>
							
						</p>
						<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
							 <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
							 <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" >
								 <button class="btn btn-danger">
									 Delete
								 </button>
							 </form>
						<% } %>
							 
					</div>
				</figure>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success " href="/campgrounds/<%= campground._id %>/comments/new">Add new Comment</a>
				</div>
				<hr>
				<div class="row">
					<div class="col-md-12">
						<% campground.comments.forEach(function(comment){ %>
 							
						<strong><%= comment.author.username %></strong>
						<span class="float-right">10 Days ago</span>
							<p>
								  <%= comment.text %>
							</p>
						
						<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							<a  class="btn btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id 													%>/edit">Edit</a>

							<form class="d-inline" action ="/campgrounds/<%= campground._id %>/comments/<%= comment._id%>?_method=DELETE" 									method="POST">
								<input type="submit" class="btn btn-danger" value="Delete" >


							</form> 
						 <% } %>
						       <hr>
                 
						<% }) %>

					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>

<%- include ("../partials/footer") %>






