<%- include('../partials/header') %>

<div class="container mt-5">
	 

		 <h1 class="text-center">
				Edit <%=campgrounds.name%> 
			</h1>
			<div style= "width:30% ;
					  margin:30px auto;">
				 <form  class="mt-3" action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" >
					 <div class="form-group">
						 <input class="form-control" type="text" name="campgrounds[name]" value="<%=campgrounds.name %>">
					 </div>
					 <div class="form-group">
						 <input class="form-control" type="number" name="campgrounds[price]" value="<%=campgrounds.price %>">
					 </div>
					 <div class="form-group">
						 	<input class="form-control" type="text" name="campgrounds[image]" value="<%=campgrounds.image %>">
					 </div>
					  <div class="form-group">
						 	<input class="form-control" type="text" name="campgrounds[description]" value="<%=campgrounds.description %>">
					 </div>
					 
					 <div class="form-group">
							<button class="btn btn-primary btn-block">
						   		submit!
							</button>
					 </div>
					 
				 </form>
				<a href="/campgrounds">Go back!</a>
		       
						
		 </div>
	

		
	
</div>


